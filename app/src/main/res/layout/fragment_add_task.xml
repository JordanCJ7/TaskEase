<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:orientation="vertical"
        tools:context=".AddTaskFragment">

        <!--  <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">-->

        <TextView
            android:id="@+id/addTaskHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:text="@string/add_your_task"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:text="Task Name"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addTaskHeading"
            android:layout_marginTop="5dp"
            android:background="@drawable/blue_border"
            android:hint="Enter here"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="14sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="Task Description"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addTaskDesc"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/blue_border"
            android:gravity="start"
            android:hint="Enter here"
            android:padding="10dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="Task Priority"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/addSpinnerPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addTaskDesc"
            android:layout_marginTop="5dp"
            android:background="@drawable/blue_border"
            android:padding="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="Task Date"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTaskDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/blue_border"
            android:gravity="start"
            android:hint="Select Date"
            android:padding="10dp"
            android:textSize="14sp" />

        <!-- <TextView
             android:id="@+id/adddate"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="16dp"
             android:text="@string/select_deadline"
             android:padding="10dp"
             android:textSize="18sp"
             android:layout_margin="10dp"/>
         <CalendarView
             android:id="@+id/addcalendarView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_gravity="center"/>-->
        <!--</LinearLayout>-->

    </LinearLayout>
</layout>